{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "noImplicitAny": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": ["node", "jest"],
        "lib": ["ES2020", "DOM"],
        "skipLibCheck": true,
        "outDir": "dist",
        "rootDir": "src"
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/__test__"
    ]
}